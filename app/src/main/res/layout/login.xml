<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.hidroh.calendar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/thema"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="70sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/goHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_home_18dp" />

        <ImageButton
            android:id="@+id/goplan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_event_18dp" />

        <ImageButton
            android:id="@+id/goTmap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_traffic_18dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue700"
            android:src="@drawable/ic_identity_18dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="소셜여행 서비스"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="    수많은 여행자들과\n여행이야기를 나누세요!"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#BEC6C8"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:orientation="vertical">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="아이디"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#BEC6C8"
                    android:textColorHint="#BEC6C8"
                    android:id="@+id/idText"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:layout_marginTop="50dp"
                    android:background="#EFF1F0"/>

                <EditText
                    android:inputType="textPassword"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#BEC6C8"
                    android:textColorHint="#BEC6C8"
                    android:id="@+id/passwordText"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:layout_marginTop="10dp"
                    android:background="#EFF1F0"/>
                
                <Button
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@color/thema"
                    android:text="로그인"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.132"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:text="회원가입"
                        android:layout_weight="0.4"
                        android:id="@+id/registerButton"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.078"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.39"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:text="ID / PW 찾기"
                        android:id="@+id/findButton"/>

                </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>