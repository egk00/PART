<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_weight="0.07"
        android:background="@color/thema">
        <ImageButton
            android:id="@+id/travelcourse_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/thema"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_keyboard_backspace_black_36dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="여행코스"
            android:id="@+id/travelcourse_title"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        android:layout_weight="0.09"
        android:background="#ffffff">

        <ImageButton
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:src="@drawable/ic_favorite_border_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="   PART에서 추천하는 여행코스      (지역을 검색해주세요)"
            android:id="@+id/travelcourse_detail"
            android:textSize="26sp"
            android:paddingRight="20dp"
            android:layout_weight="0.9"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:src="@drawable/ic_favorite_border_black_24dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#ffffff">
        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/travelcourse_search_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="검 색"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="@color/thema"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>




    <ListView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/travelcourse_list"/>
</LinearLayout>