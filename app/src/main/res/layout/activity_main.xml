<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.smu.part.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/thema"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="70sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue700"
            android:src="@drawable/ic_home_18dp" />

        <ImageButton
            android:id="@+id/goplan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_event_18dp" />

        <ImageButton
            android:id="@+id/goTmap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_traffic_18dp" />

        <ImageButton
            android:id="@+id/goMypage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/thema"
            android:src="@drawable/ic_identity_18dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/mainGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@color/mainGray"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:layout_weight="1"
                        android:text="   통합검색 : "/>

                    <EditText
                        android:id="@+id/total_search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:background="#ffffff"
                        android:hint="검색어를 입력하세요"/>

                    <ImageButton
                        android:id="@+id/total_search_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/ic_search_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinner_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinner_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/main_search_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="검 색"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:background="@color/thema"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/mainGray"
                android:orientation="vertical">
                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewFlipper">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coupon"
                        android:id="@+id/main_imageview1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bus"
                        android:id="@+id/main_imageview2"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/weather"
                        android:id="@+id/main_imageview3"/>
                </ViewFlipper>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/travelcourse"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/mainGray"
                android:clickable="true"
                android:onClick="TravelCourse">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/month1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="몇"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#ff6347"/>

                    <TextView
                        android:id="@+id/textView00"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="월 추천 여행지"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/thema" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:text="    + 자세히 보기"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/main_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:id="@+id/goparty"
                android:clickable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/mainGray"
                android:onClick="GoParty">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/month2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="몇"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#ff6347"/>
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="월 행사정보"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/thema"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:text="    + 자세히 보기"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/main_2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
